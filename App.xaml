<Application
    x:Class="VisorDTE.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisorDTE"
    xmlns:converters="using:VisorDTE.Converters"
    xmlns:views="using:VisorDTE.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <BitmapImage x:Key="AppLogoBitmap" UriSource="/Assets/Light/Square150x150Logo.scale-125.png"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <BitmapImage x:Key="AppLogoBitmap" UriSource="/Assets/Dark/Square150x150Logo.scale-125.png"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
            <converters:PercentageConverter x:Key="PercentageConverter"/>
            <converters:InvertedBooleanConverter x:Key="InvertedBooleanConverter"/>
            <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>
            <converters:StringFormatConverter x:Key="StringFormatConverter"/>
            <converters:BooleanToGridLengthConverter x:Key="BooleanToGridLengthConverter"/>

            <Style x:Key="CopyButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="4,0,0,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8C8;" FontSize="12"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="WideDteTemplate">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ZoomMode="Enabled" MinZoomFactor="0.2">
                    <views:DteView HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </ScrollViewer>
            </DataTemplate>

            <DataTemplate x:Key="NarrowDteTemplate">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                        <views:DteView/>
                    </Viewbox>
                </ScrollViewer>
            </DataTemplate>

            <views:DteTemplateSelector x:Key="DteTemplateSelector"
                                       WideTemplate="{StaticResource WideDteTemplate}"
                                       NarrowTemplate="{StaticResource NarrowDteTemplate}"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>