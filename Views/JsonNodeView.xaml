<UserControl
    x:Class="VisorDTE.Views.JsonNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:VisorDTE.Models"
    xmlns:local="using:VisorDTE.Views"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel Margin="15,2,0,2">
        <TextBlock Text="{Binding PropertyName}" FontWeight="SemiBold"/>
        <StackPanel Orientation="Horizontal" Spacing="4" Visibility="{Binding Value, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBox Text="{Binding Value}" IsReadOnly="True" BorderThickness="0" TextWrapping="Wrap" Background="Transparent"/>
        </StackPanel>

        <muxc:ItemsRepeater ItemsSource="{Binding Children}">
            <muxc:ItemsRepeater.ItemTemplate>
                <DataTemplate>
                    <local:JsonNodeView/>
                </DataTemplate>
            </muxc:ItemsRepeater.ItemTemplate>
        </muxc:ItemsRepeater>
    </StackPanel>
</UserControl>